
{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "settings": {
    "ecmascript": 6,
    "jsx": true,
    "react": {
      "pragma": "React",
      "version": "0.14.8"
    }
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "classes": true,
      "modules": true
    }
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "React": true,
    "__": true,
    "Parse": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/no-danger": 0,

    "no-alert": 1,
    "no-caller": 2,
    "no-bitwise": 0,
    "no-console": 1,
    "no-debugger": 2,
    "no-empty": 2,
    "no-eval": 1,
    "no-ex-assign": 2,
    "no-floating-decimal": 0,
    "no-implied-eval": 2,
    "no-with": 2,
    "no-fallthrough": 2,
    "no-unreachable": 2,
    "no-undef-init": 2,
    "no-octal": 2,
    "no-obj-calls": 2,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-native-reassign": 2,
    "no-plusplus": 0,
    "no-delete-var": 2,
    "no-return-assign": 0,
    "no-new-object": 2,
    "no-label-var": 2,
    "no-ternary": 0,
    "no-self-compare": 0,
    "no-control-regex": 1,
    "no-invalid-regexp": 1,

    "smarter-eqeqeq": 0,
    "brace-style": 0,
    "camelcase": 2,
    "curly": 2,
    "dot-notation": 1,
    "eqeqeq": 1,
    "new-parens": 2,
    "guard-for-in": 0,
    "radix": 0,
    "new-cap": 0,
    "quote-props": 0,
    "semi": 2,
    "use-isnan": 2,
    "quotes": [1, "single", "avoid-escape"],
    "max-params": [0, 3],
    "max-statements": [0, 10],
    "complexity": [0, 11],
    "wrap-iife": 1,
    "no-multi-str": 2
  }
}
